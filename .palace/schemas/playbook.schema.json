{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://palace/schemas/playbook.schema.json",
  "title": "Playbook",
  "type": "object",
  "additionalProperties": false,
  "required": ["schemaVersion", "kind", "name", "summary", "rooms", "provenance"],
  "properties": {
    "schemaVersion": {"type": "string", "const": "1.0.0"},
    "kind": {"type": "string", "const": "palace/playbook"},
    "name": {"type": "string", "minLength": 1},
    "summary": {"type": "string", "minLength": 1},
    "rooms": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string", "minLength": 1}
    },
    "requiredEvidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "description"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "description": {"type": "string", "minLength": 1},
          "room": {"type": "string"}
        }
      }
    },
    "verification": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "expectation"],
        "properties": {
          "name": {"type": "string", "minLength": 1},
          "expectation": {"type": "string", "minLength": 1},
          "capability": {"type": "string"}
        }
      }
    },
    "provenance": {"$ref": "#/$defs/provenance"}
  },
  "$defs": {
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["createdBy", "createdAt"],
      "properties": {
        "createdBy": {"type": "string", "minLength": 1},
        "createdAt": {"type": "string", "format": "date-time"},
        "updatedBy": {"type": "string"},
        "updatedAt": {"type": "string", "format": "date-time"},
        "generator": {"type": "string"},
        "generatorVersion": {"type": "string"}
      }
    }
  }
}
